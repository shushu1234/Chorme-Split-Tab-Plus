{
  "manifest_version": 3,
  "name": "Split Tab Plus",
  "description": "为Chrome分屏标签页添加独立地址栏，让您可以独立控制每个分屏页面的URL和刷新",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "点击切换地址栏 | 右键打开设置"
  },
  "options_page": "options/options.html",
  "commands": {
    "toggle-addressbar": {
      "suggested_key": {
        "default": "Alt+A",
        "mac": "Alt+A"
      },
      "description": "切换地址栏显示/隐藏"
    }
  }
}
